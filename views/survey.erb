<h3>Add a Question</h3>

<form action="/surveys/<%= @survey.id %>" method="post">
  <div class="form-group">
    <label for="question">Question:</label>
    <input type="text" name="question">
	</div>
  <div class="form-group">
    <select id="question_type" name="question_type">
      <option id="singlechoice" value="singlechoice">Multiple Choice, Single Answer</option>
      <option id="multichoice" value="multichoice">Multiple Choice, Multiple Answer</option>
      <option id="open" value="open">Open-Ended Answer</option>
    </select>
  </div>
	<button class="btn btn-info" name="submit">Add question</button>
</form>
